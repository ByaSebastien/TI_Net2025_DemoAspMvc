@using TI_Net2025_DemoAspMvc.Models.Dtos

@model BookFormDto

<h1>Add Book</h1>

<a asp-controller="Book" asp-action="Index">Retour à la liste</a>

<form asp-controller="Book" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Isbn">ISBN</label>
        <input asp-for="Isbn" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Author">Author</label>
        <input asp-for="Author" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Release">Release</label>
        <input asp-for="Release" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Add</button>
</form>